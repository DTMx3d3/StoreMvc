@model List<StoreMvc.Models.Watch>

@{
    ViewData["Title"] = "Manage";
}

<h1>Manage Watches</h1>

<div>
    <a asp-action="Create" class="btn btn-primary">Add New Watch</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var watch in Model)
        {
            <tr>
                <td>@watch.brand</td>
                <td>@watch.model</td>
                <td>@watch.price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@watch.id" class="btn btn-primary">Edit</a>
    <form asp-action="Delete" asp-route-id="@watch.id" method="post" onsubmit="return confirm('Are you sure you want to delete this watch?');">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>                
    </td>
            </tr>
        }
    </tbody>
</table>






